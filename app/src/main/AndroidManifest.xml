<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tamizna.offlinenote">

    <application
        android:name=".CustomApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OfflineNote">
        <activity android:name=".ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.LoginActivity"/>
        <activity android:name=".ui.UserSettingActivity" />
        <activity android:name=".ui.note.DetailNoteActivity" />
        <activity android:name=".ui.note.CreateNoteActivity" />
        <activity android:name=".ui.folder.CreateNewFolderActivity" />
        <activity android:name=".ui.note.ListNoteActivity" />
        <activity android:name=".ui.folder.MainActivity"/>
    </application>

</manifest>